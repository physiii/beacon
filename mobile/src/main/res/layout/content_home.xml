<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.pyfi.beacon.HomeActivity"
    android:background="#222">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAC"
        android:id="@+id/txtMac"
        android:textColor="#cfcccc"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User"
        android:id="@+id/txtEmail"
        android:textColor="#cfcccc"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal"
        android:onClick="update"
        android:textColor="#444"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set zone"
        android:id="@+id/btnZone1"
        android:layout_gravity="center_horizontal"
        android:textColor="#444"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:onClick="set_zone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="nothing set"
        android:id="@+id/txtWifiTrigger"
        android:textColor="#cfcccc"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/btnZone1"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
